---
import { Card, CardContent, CardFooter } from "@/components/ui/card";
---

<a
  href={`/forms/${Astro.props.slug}`}
  class="transition duration-300 ease-in-out hover:-translate-y-1 hover:scale-110"
>
  <Card className="pt-0 drop-shadow-2xl">
    <CardContent className="p-0">
      <img
        src={`/${Astro.props.miniature}`}
        transition:name={`${Astro.props.slug}-transition`}
        class="rounded-t-xl"
        width="300"
        alt={`${Astro.props.slug}-miniature`}
      />
    </CardContent>
    <CardFooter className="text-sm font-bold w-full justify-center italic ">
      <span class="underline text-blue-600"> {Astro.props.title}</span>
    </CardFooter>
  </Card>
</a>
